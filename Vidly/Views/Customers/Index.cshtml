@model  Vidly.ViewModels.CustomersViewModel


<h2>Customers Index</h2>

@{
    if (Model.Customers.Count < 1)
    {
        <text>No customers in the system</text>
    }
    else
    {
        <ul>
            @{ foreach (var customer in Model.Customers)
                {
                    <li><a href="customers/detail/@customer.Id">@customer.Name</a></li>
                }
            }
        </ul>
    }
}